<h4 class="title">ユーザー一覧</h4>
<th class="col_md-1 offset-md-10 new_task_button"><button type="button" class="btn btn-primary"><%= link_to "新規作成", new_admin_user_path, class:"new_task_button_text" %></button>
<table class="container">
  <tr class="row">
    <th class="col-md-1 offset-md-5 index_items">ユーザー</th>
    <th class="col-md-2 index_items">メールアドレス</th>
    <th class="col-md-1 index_items">タスク数</th>
    <th class="col-md-1 index_items"></th>
    <th class="col-md-1 index_items"></th>
    <th class="col-md-1 index_items"></th>
  </tr>
  <% @users.each do |user| %>
  <tr class="row task_row">
    <td class="col-md-1 offset-md-5 index_items"><%= user.name %></td>
    <td class="col-md-2 index_items"><%= user.email %></td>
    <td class="col-md-1 index_items"></td>
    <td class="col-md-1 index_items "><button type="button" class="btn btn-primary"><%= link_to "詳細", admin_user_path(user.id), class:"index_link"%></button></td>
    <td class="col-md-1 index_items"><button type="button" class="btn btn-success"><%= link_to "編集", edit_admin_user_path(user.id), class:"index_link" %></td>
    <td class="col-md-1 index_items"><button type="button" class="btn btn-danger"><%= link_to "削除", admin_user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class:"index_link" %></td>
  </tr>
  <% end %>
</table>
