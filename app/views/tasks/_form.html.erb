<%= form_with(model: @task, local: true, url: choose_new_or_edit) do |form| %>
<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= @task.errors.count %><%= t('errors.messages.error_number') %></h2>
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <div class="task_new">
    <%= t('attributes.task.task_name') %>
    <%= form.text_field :task_name %>
  </div>
  <div class="task_new">
    <%= t('attributes.task.detail') %>
    <%= form.text_field :detail %>
  </div>
  <div class="task_new">
    <%= t('attributes.task.deadline') %>
    <%= form.date_field :deadline %>
  </div>
  <div class="task_new">
    <%= t('attributes.task.status') %>
    <%= form.select :status, [["未着手","未着手"],["着手中","着手中"],["完了","完了"]], include_blank: "選択して下さい" %>
  </div>
  <div class="task_new">
    <%= t('attributes.task.priority') %>
    <%= form.text_field :priority %>
  </div>
<%= form.submit %>
<% end %>
<%= link_to t('attributes.task.backto_index'), tasks_path %>
