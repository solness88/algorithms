<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
    <th>期限</th>
    <th>現在の状態</th>
    <th>優先順位</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_name %></td>
    <td><%= task.detail %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
  </tr>
<% end %>
</table>
