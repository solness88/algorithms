<%= notice %>
<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
    <th>期限</th>
    <th>現在の状態</th>
    <th>優先順位!</th>
  </tr>
<% @tasks.each do |task| %>
  <tr class = "task_row">
    <td><%= task.task_name %></td>
    <td><%= task.detail %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= link_to "詳細を確認する", task_path(task.id) %></td>
    <td><%= link_to "タスクを編集する", edit_task_path(task.id) %></td>
    <td><%= link_to 'ブログを削除する', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
</br>
<%= link_to "新しくタスクを作成する", new_task_path %>
